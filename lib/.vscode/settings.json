{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "autoFix": true,
      "language": "typescript"
    },
    {
      "autoFix": true,
      "language": "typescriptreact"
    }
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    },
    "components/**/*.d.ts": true,
    "decorators/**/*.d.ts": true,
    "mask/**/*.d.ts": true,
    "validator/**/*.d.ts": true,
    "interfaces/**/*.d.ts": true,
    "helpers/**/*.d.ts": true,
    "*.d.ts": true,
    "**/*.map": {
      "when": "$(basename)"
    }
  }
}